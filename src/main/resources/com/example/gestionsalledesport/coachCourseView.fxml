<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.gestionsalledesport.controllers.CoachController"
            prefWidth="400" prefHeight="200">

    <top>
        <Label text="Voir les dates des cours" />
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Entrez l'ID du coach :" />
            <TextField fx:id="coachIdField" promptText="ID du coach" />
            <Button text="Afficher les dates" onAction="#showCoachCourses" />
        </VBox>
    </center>

</BorderPane>
