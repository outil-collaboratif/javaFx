<!-- login.fxml -->

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>


<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.gestionsalledesport.controllers.LoginController" >
    <prefWidth>800</prefWidth>
    <prefHeight>600</prefHeight>
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Login" onAction="#login"/>
</VBox>
