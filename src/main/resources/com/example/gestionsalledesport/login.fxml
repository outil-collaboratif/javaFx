<!-- login.fxml -->

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>


<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.gestionsalledesport.controllers.LoginController" 
      style="-fx-background-color: #f4f4f4; -fx-padding: 50;"> <!-- Setting background color and padding -->

    <prefWidth>800</prefWidth>
    <prefHeight>600</prefHeight>
    
    <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/> <!-- Setting font size, weight, and color -->
    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>

    <TextField fx:id="emailField" promptText="Email" style="-fx-prompt-text-fill: #999999; -fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-padding: 5px;"/> <!-- Adjusting text field properties -->
    
    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-prompt-text-fill: #999999; -fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-padding: 5px;"/> <!-- Adjusting password field properties -->

    <Button text="Login" onAction="#login" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 150px; -fx-pref-height: 40px; -fx-border-radius: 5px;"/> <!-- Adjusting button properties -->
</VBox>
